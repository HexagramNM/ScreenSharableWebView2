<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="external\**" />
    <Compile Remove="LocalNAudio\**" />
    <EmbeddedResource Remove="external\**" />
    <EmbeddedResource Remove="LocalNAudio\**" />
    <None Remove="external\**" />
    <None Remove="LocalNAudio\**" />
    <Page Remove="external\**" />
    <Page Remove="LocalNAudio\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3595.46" />
    <PackageReference Include="NAudio" Version="2.1.0-beta.1" />
    <PackageReference Include="System.Management" Version="10.0.0" />
  </ItemGroup>

</Project>
